---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import path from 'path';

const { BASE_URL } = import.meta.env;

const collection = await getCollection('gallery');
const images = collection.map((a) => a.data);
---

<Layout title="Image Gallery">
  <main class="container mx-auto px-6 py-16">
    <h1
      class="text-5xl font-light tracking-wide mb-16 text-stone-900 dark:text-stone-100"
    >
      Gallery
    </h1>

    <div
      class="masonry-container columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-6 space-y-6"
    >
      {
        images.map((image, i) => (
          <div class="masonry-item break-inside-avoid mb-6">
            <a
              href={path.join(BASE_URL, 'image', String(image.id))}
              class="group block overflow-hidden rounded-lg transition-all duration-300 relative"
              transition:name={`image-${image.id}`}
            >
              <div class="overflow-hidden relative">
                <Image
                  src={image.src}
                  alt={image.alt}
                  width="400"
                  height="400"
                  class="w-full h-auto object-cover transition-transform duration-500 group-hover:scale-102"
                />
                <div class="absolute inset-0 bg-slate-900 opacity-0 group-hover:opacity-50 transition-opacity duration-300 flex items-center justify-center pointer-events-none">
                  <div class="text-stone-100 text-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 p-4">
                    <h3 class="text-lg font-medium mb-1">{image.title}</h3>
                    <p class="text-sm font-light tracking-wide opacity-90">
                      {image.category}
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
