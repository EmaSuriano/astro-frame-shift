---
import { ClientRouter } from 'astro:transitions';
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const { BASE_URL } = import.meta.env;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href={`${BASE_URL}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      // Theme initialization - runs immediately to prevent flash
      (function () {
        const getTheme = () => {
          if (
            typeof localStorage !== 'undefined' &&
            localStorage.getItem('theme')
          ) {
            return localStorage.getItem('theme');
          }
          if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            return 'dark';
          }
          return 'light';
        };

        const theme = getTheme();
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
        window.localStorage.setItem('theme', theme);
      })();
    </script>
    <style>
      /* Custom styles for masonry layout */
      .masonry-container {
        column-gap: 1.5rem;
      }
      .masonry-item {
        display: inline-block;
        width: 100%;
      }
      /* Custom hover scale effect */
      .group-hover\:scale-102:hover {
        transform: scale(1.01);
      }
    </style>
    <ClientRouter />
  </head>
  <body
    class="min-h-screen bg-stone-50 dark:bg-slate-900 font-inter transition-colors duration-300"
    transition:animate="initial"
  >
    <div class="fixed top-6 right-6 z-50">
      <ThemeToggle />
    </div>

    <main>
      <slot />
    </main>

    <footer
      class="bg-stone-100 dark:bg-slate-800 mt-16 py-8"
      transition:name="footer"
    >
      <div
        class="container mx-auto px-6 text-center text-stone-600 dark:text-gray-400 text-sm font-light"
      >
        <p>
          &copy; {new Date().getFullYear()} Gallery
        </p>
      </div>
    </footer>
  </body>
</html>
