---
import { ClientRouter } from "astro:transitions";
import ThemeToggle from "../components/ThemeToggle.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link
      rel="icon"
      type="image/svg+xml"
      href="/astro-frame-shift/favicon.svg"
    />
    <style>
      /* Custom styles for masonry layout */
      .masonry-container {
        column-gap: 1.5rem;
      }
      .masonry-item {
        display: inline-block;
        width: 100%;
      }
    </style>
    <ClientRouter />
  </head>
  <body
    class="min-h-screen bg-gray-100 dark:bg-gray-900 transition-colors duration-300"
    transition:animate="initial"
  >
    <header
      class="bg-white dark:bg-gray-800 shadow-md"
      transition:name="header"
    >
      <div class="container mx-auto p-4 flex justify-between items-center">
        <a
          href="/astro-frame-shift"
          class="text-xl font-bold text-gray-800 dark:text-white"
        >
          Image Gallery
        </a>

        <ThemeToggle />
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer
      class="bg-white dark:bg-gray-800 shadow-inner mt-8 py-6"
      transition:name="footer"
    >
      <div
        class="container mx-auto px-4 text-center text-gray-600 dark:text-gray-400"
      >
        <p>
          &copy; {new Date().getFullYear()} Image Gallery. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
